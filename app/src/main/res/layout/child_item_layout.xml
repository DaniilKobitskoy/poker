<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/child_item_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6DB87777"
    android:padding="8dp">

    <ImageView
        android:id="@+id/childImageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/poker1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/childTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ubuntu_bold_italic"
        android:paddingLeft="15dp"
        android:textColor="#FF7600"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
